{
  "name": "specappular",
  "displayName": "Specappular",
  "description": "AI will read plain-English specs and create full apps. Minimal placeholder VS Code extension with init and generate commands.",
  "version": "0.0.2",
  "publisher": "mattleibow",
  "license": "MIT",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:specappular.init",
    "onCommand:specappular.generate",
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "specappular.init",
        "title": "Specappular: Initialize App Spec",
        "category": "Specappular"
      },
      {
        "command": "specappular.generate",
        "title": "Specappular: Generate",
        "category": "Specappular"
      }
    ],
    "configuration": {
      "title": "Specappular",
      "properties": {
        "specappular.autoGenerateOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run 'Specappular: Generate' when saving Markdown files under spec/."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.88.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {}
}